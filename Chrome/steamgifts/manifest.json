{
    "manifest_version": 2,

    "name": "Steamgifts",
    "description": "Signs up for giveaways on Steamgifts.",
    "version": "1.0",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png"
    },

    "permissions": [
        "tabs",
        "http://www.steamgifts.com/"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Steamgifts"
    },
    "background": {
        "scripts": [
            "jquery-1.9.1.min.js",
            "background.js"
        ]
    }
}
